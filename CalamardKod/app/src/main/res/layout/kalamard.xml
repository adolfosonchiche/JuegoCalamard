<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KalamardActivity"
    android:id="@+id/campo_id"


    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frame_contenedor_meta"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </FrameLayout>


        <FrameLayout
            android:id="@+id/frame_contenedor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/img_semaforo"
                android:layout_marginTop="20dp"
                android:layout_gravity="center|top"
                android:src="@drawable/semaforo_rojo"
                android:layout_width="70dp"
                android:layout_height="70dp"/>

            <ImageView
                android:id="@+id/img_player"
                android:layout_marginBottom="35dp"
                android:layout_gravity="bottom"

                android:layout_width="108dp"
                android:layout_height="108dp">

            </ImageView>

            <Button
                android:id="@+id/boton_jugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#21286E"
                android:gravity="center"
                android:padding="30sp"
                android:text="@string/btn_nuevo_juego"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_cronometro"
                android:textSize="22sp"
                android:background="#2AE4CF"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_width="200sp"
                android:layout_height="50sp"/>

            <TextView
                android:id="@+id/nombre_jugado_activo"
                android:textColor="#070709"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="200sp"
                android:layout_height="40sp"/>

        </FrameLayout>
    </FrameLayout>

</LinearLayout>