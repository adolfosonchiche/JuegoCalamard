<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/princip_fondo"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="210dp"
                android:layout_marginBottom="20dp"
                android:background="#26A9E6"
                android:gravity="center"
                android:text="@string/seleccion_jugador"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/list_jugadores"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="253dp"
                android:background="#70A5BA" />


            <EditText
                android:id="@+id/name_jugador"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="90dp"
                android:autofillHints=""
                android:background="#ECDCDC"
                android:gravity="center"
                android:hint="@string/name_user"
                android:inputType="text"
                android:textColor="#000"
                android:textColorHint="#494545"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_crear_jugador"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150dp"
                android:text="@string/btn_registrar" />

            <Button
                android:id="@+id/btn_rankin"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="@string/btn_rankin" />

        </FrameLayout>
    </ScrollView>
</RelativeLayout>